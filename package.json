{
  "name": "newtek_ndi_control",
  "version": "1.0.2BETA",
  "description": "NDI Kamerasteuerung mit Electron",
  "author": "Aaron Standke",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.filmuni.kamerasteuerung",
    "asar": false,
    "productName": "NewTek NDI Control",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "UI/**/*",
      "img/**/*",
      "preload.js",
      "!dist",
      "!**/*.md",
      "!**/node_modules/*/{test,__tests__}/**"
    ],
    "extraResources": [],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "UI/img/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "UI/img/icon.icns",
      "hardenedRuntime": false,
      "entitlements": null,
      "gatekeeperAssess": false,
      "identity": null
    }
  },
  "devDependencies": {
    "electron": "^29.0.0",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {
    "electron-store": "^8.2.0",
    "needle": "^3.3.1",
    "open": "^10.1.2"
  }
}
